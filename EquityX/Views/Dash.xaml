<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EquityX.Pages.Dash"
             Title="Dash">
    <VerticalStackLayout>
        <Border HeightRequest="500">
            <VerticalStackLayout>
                <FlexLayout JustifyContent="SpaceBetween" Margin="0, 10, 0, 0">
                    <HorizontalStackLayout x:Name="CompTitle" Margin="10, 0, 0, 0">
                        <Label Text="Asset Breakdown" Style="{StaticResource BoldLabelWhite}"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout x:Name="CompStats" Margin="0, 0, 10, 0">
                        <Label x:Name="CryptoStat" Text="C 0" Style="{StaticResource BoldLabelWhite}" Margin="0, 0, 10, 0"/>
                        <Label x:Name="StockStat" Text="S 0" Style="{StaticResource BoldLabelWhite}"/>
                    </HorizontalStackLayout>
                </FlexLayout>
                <ScrollView x:Name="AssetsContainer" HeightRequest="480">
                    <!-- Rows will be placed here -->
                </ScrollView>
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>