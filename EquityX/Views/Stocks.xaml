<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EquityX.Pages.Stocks"
             Title="Stocks">
    <VerticalStackLayout>
        <Border WidthRequest="360" HorizontalOptions="Center" Style="{StaticResource InputBorderBlue}">
            <HorizontalStackLayout>
                <Image Margin="15, 0, 0, 0" Source="search_icon.png" Aspect="AspectFit" HeightRequest="20" />
                <Entry Placeholder="Search for Stocks here..." Keyboard="Plain" Style="{StaticResource EntryFormsWhite }"/>
            </HorizontalStackLayout>
        </Border>
        <ContentView x:Name="LiveChart"></ContentView>
        <ContentView x:Name="StockOptionsContainer"></ContentView>
    </VerticalStackLayout>
</ContentPage>