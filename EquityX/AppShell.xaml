<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EquityX.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EquityX"
    xmlns:pages="clr-namespace:EquityX.Pages"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="{StaticResource MainBackground}">

    <!-- I am using this to disable the navbar from having any text -->
    <Shell.TitleView>
        <VerticalStackLayout>
        </VerticalStackLayout>
    </Shell.TitleView>

    <!-- This section then directs the shell on where to go -->
    <TabBar>
        <ShellContent
            Title="Main"
            ContentTemplate="{DataTemplate pages:Login}"
            />
    </TabBar>
</Shell>
