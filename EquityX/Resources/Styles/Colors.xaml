<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="IncreaseArrow">#36FF4B</Color>
    <Color x:Key="AppBackground">#1D2833</Color>
    <Color x:Key="CardBackground">#2E3E50</Color>
    <Color x:Key="IconOrange">#E17D29</Color>
    <Color x:Key="MainBackground">#2E3E50</Color>
    <Color x:Key="MainForeground">#3A5066</Color>
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">White</Color>

    <SolidColorBrush x:Key="IncreaseArrowBrush" Color="{StaticResource IncreaseArrow}"/>
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackground}"/>
    <SolidColorBrush x:Key="MainBackgroundBrush" Color="{StaticResource MainBackground}"/>
    <SolidColorBrush x:Key="IconOrangeBrush" Color="{StaticResource IconOrange}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource White}"/>
</ResourceDictionary>